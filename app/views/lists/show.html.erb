
<% if @list.photo.attached? %>
  <div class="card-category" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.photo.key %>); height: 400px;'>
  <h1><%= @list.name %></h1>
  </div>
<% else %>
   <h1 class="card-category" ><%= @list.name %></h1>
<% end %>

<% @list.bookmarks.each do |bookmark| %>
  <%= bookmark.comment %><br>
  <%= image_tag bookmark.movie.poster_url, width: 200 %><br>
  <%= "#{bookmark.movie.rating} / 10" %>
  <%= link_to 'Remove Bookmark', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %><br>
<% end %><br>

<%= link_to 'Go back', lists_path, class: "btn btn-ghost", id: "button-card" %><br>
<br>
<%= link_to 'Add a Bookmark', new_list_bookmark_path(@list), class: "btn btn-ghost", id: "button-card" %><br>
